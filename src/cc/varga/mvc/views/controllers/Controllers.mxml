<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/halo" 
		 xmlns:controls="nl.flexcoders.controls.*"
		 width="100%" height="100%">
	<fx:Script>
		<![CDATA[
			import cc.varga.mvc.events.controllers.ControllersEvent;
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:Group>
		<s:layout><s:VerticalLayout/></s:layout>
		
		<s:Group>
			<s:layout><s:HorizontalLayout/></s:layout>
			<s:Button id="Btn_play" label="Play" height="100%" click="dispatchEvent(new ControllersEvent(ControllersEvent.PLAY_CLICK))"/>
			<s:Button id="Btn_stop" label="Stop" height="100%" click="dispatchEvent(new ControllersEvent(ControllersEvent.STOP_CLICK))" />
			<s:Button id="Btn_prev" label="Previous" height="100%" click="dispatchEvent(new ControllersEvent(ControllersEvent.PREV_CLICK))"/>
			<s:Button id="Btn_next" label="Next" height="100%" click="dispatchEvent(new ControllersEvent(ControllersEvent.NEXT_CLICK))" />
		</s:Group>
		
		<s:Label text="Volume" height="100%" fontSize="16" />
		<s:HSlider id="volimeSlider" height="100%" width="100%" />
		
	</s:Group>
</s:Group>