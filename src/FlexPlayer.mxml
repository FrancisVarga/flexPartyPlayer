<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/halo"
			   xmlns:playlisturl="cc.varga.mvc.views.playlisturl.*" 
			   xmlns:list="cc.varga.mvc.views.playlisturl.list.*" 
			   xmlns:mvc="cc.varga.mvc.*" 
			   xmlns:player="cc.varga.mvc.views.player.*"
               xmlns:menu="cc.varga.mvc.views.menu.*"
			   xmlns:playlist="cc.varga.mvc.views.playlist.*"
			   xmlns:controls="nl.flexcoders.controls.*"
			   
			   xmlns:youtubePlayer="cc.varga.mvc.views.youtubePlayer.*"
			   
			   width="100%" height="100%"
			   
			   creationComplete="application1_creationCompleteHandler(event)">
	
	<s:layout><s:HorizontalLayout/></s:layout>
	
	<fx:Script>
		<![CDATA[
			import mx.managers.SystemManager;
			import mx.events.FlexEvent;

			protected function application1_creationCompleteHandler(event:FlexEvent):void
			{
				leftContainer.setFocus();
			}

		]]>
	</fx:Script>
	
	<fx:Declarations>
		<mvc:ApplicationContext contextView="{this}" />
	</fx:Declarations>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="full" />
	</s:states>
	
	<s:Group id="leftContainer" includeIn="normal" height="100%" width="100%">
		<menu:Menu height="100%" width="100%" />
	</s:Group>
	
	<s:Group id="mainContainer" height="100%" width="100%">
		
		<s:layout><s:VerticalLayout/></s:layout>	
		
		<youtubePlayer:YoutubePlayerContainer id="youtubePlayer" width="100%" height="100%" visible="false"/>
		
		<playlist:Playlist id="playlist" height="100%" width="100%" />	
		
	</s:Group>

	<s:Scroller id="rightContainer" height="100%" includeIn="normal">
		<s:RichEditableText id="debug" width="350" height="100%" editable="false" />
	</s:Scroller>
		
</s:Application>